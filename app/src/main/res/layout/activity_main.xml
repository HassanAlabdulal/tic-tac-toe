<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <!-- Centered Content Container -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Player Information Display -->
        <TextView
            android:id="@+id/tvPlayerInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player_info"
            android:textSize="28sp"
            android:textColor="#000000"
            android:layout_marginTop="16dp" />

        <!-- Game Status Display -->
        <TextView
            android:id="@+id/tvGameStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_status"
            android:textSize="18sp"
            android:textColor="#555555"
            android:layout_marginTop="8dp" />

        <!-- Tic Tac Toe Grid -->
        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvGameStatus"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:columnCount="3"
            android:rowCount="3"
            android:padding="10dp"
            android:background="@drawable/grid_background"
            android:layout_gravity="center_horizontal">
            <!-- Buttons are added dynamically -->
        </GridLayout>

        <!-- Replay Button -->
        <Button
            android:id="@+id/btnReplay"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/replay_button"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:background="@drawable/replay_button_background"
            android:layout_marginTop="20dp" />
    </LinearLayout>
</RelativeLayout>
